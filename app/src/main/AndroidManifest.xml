<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myapp.androidbook.jp.samplebase">

    <!-- android:icon="@mipmap/ic_launcher" -->
    <!-- android:theme="@style/AppTheme.NoActionBar" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/cat_touka_do"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:logo="@drawable/cat_touka_do"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScreenTransitionActivity"
            android:label="@string/title_activity_screen_transition"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CounterActivity"
            android:label="@string/title_activity_counter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TimerActivity"
            android:label="@string/title_activity_timer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageViewActivity"
            android:label="@string/title_activity_image_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageChangeActivity"
            android:label="@string/title_activity_image_change"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
